@Html.Grid(Model).Columns(columns =>
{
    columns.Add(m => m.TaqninData.Taqninid).Titled(" المسلسل").Css("text-right").Filterable(true);
    columns.Add(m => m.TaqninData.id_no).Titled("رقم الطلب").Css("text-right").Filterable(true);
    columns.Add(m => m.TaqninData.income_no).Titled("امر الشغل").Css("text-right").Filterable(true);
    columns.Add(m => m.TaqninData.governate).Titled("المحافظه").Css("text-right").Filterable(true);
    columns.Add(m => m.TaqninData.name).Titled("اسم مقدم الطلب").Css("text-right").Sortable(true).Filterable(true).SetWidth("500px");
    columns.Add(m => m.TaqninData.activity).Titled("نوع النشاط").Css("text-right").Sortable(true).Filterable(true);
    columns.Add(m => m.uploaddate).Titled("تاريخ الطلب").Css("text-right").Sortable(true).Filterable(true);
    columns.Add(m => m.studentUser).Titled("اسم المستخدم للدراسه").Css("text-right").Sortable(true).Filterable(true);
    columns.Add(m => m.ChangesCenterDescion).Titled("قرار مركز المتغيرات").Css("text-right").Filterable(true);
    columns.Add(m => m.geographic_person_response).Titled("موقف التداخلات ق م").Css("text-right").Sortable(true).Filterable(true);

    columns.Add(m => m.TaqninData.tazalom).Titled("التظلم").Css("text-right").Sortable(true).Filterable(true);
    columns.Add(m => m.LegalFullfied).Titled("القانونيه").Css("text-right").Sortable(true).Filterable(true);
    columns.Add(m => m.id).Css("hiderow");
    columns.Add().Encoded(false).Sanitized(false).SetWidth("2%").RenderValueAs(o => Html.ActionLink("اضافه البيانات ", "ResponseData", "userhome", new { id = o.id }, new { @class = "adddata text-capitalize text-success btn btn-outline-success  " }));


}).WithPaging(20).WithGridItemsCount("Total Orders").WithMultipleFilters()
