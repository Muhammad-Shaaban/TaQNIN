@model TaQNIN1.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@*<h2>@ViewBag.Title.</h2>*@

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4 class="text-center" style="margin-top:100px;">مستخدم جديد</h4>
    <hr />
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <div class="form-group" style="margin-top:40px"> 
        <div class="col-md-10 ">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>
        @Html.Label("اسم المستخدم", new { @class = "col-md-2 control-label" })
    </div>
    
       <div class="form-group" style="margin-top:40px"> 
        <div class="col-md-10 ">
            <select class="form-control" name="role">
                <option value=""> --اختر الدور--</option>
                <option value="ادمن"> ادمن</option>
                <option value="المركز الجغرافى"> المركز الجغرافى</option>
                <option value="صف الظابط">صف الظابط</option>
                <option value="دارس">دارس</option>
                <option value="دراسه ورد">الدراسه والرد</option>
                <option value="2رد">الرد2</option>
                <option value="نقيب">نقيب</option>
                <option value="قائد المركز">قائد المركز</option>
                <option value="لواء">لواء</option>
                <option value="الرد">الرد</option>
                <option value="مراجع">مراجع</option>
                <option value="حذف الطلبات">حذف الطلبات</option>
            </select>
        </div>
        @Html.Label("المستخدم", new { @class = "col-md-2 control-label" })
         
    </div>
    
    <div class="form-group">
     <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        @Html.Label("الرقم السري", new { @class = "col-md-2 control-label" })
    </div>
    <div class="form-group">
       
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
        @Html.Label("تأكيد الرقم السري", new { @class = "col-md-2 control-label" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="margin-top:30px">
            <input type="submit" class="btn btn-default" value="اضافه حساب" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
